{
  "name": "kite-trading-bot",
  "version": "1.0.0",
  "description": "Automated trading bot for Zerodha Kite with REST API",
  "main": "api-server.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "start:api": "node api-server.js",
    "pm2:stop": "pm2 stop api-server",
    "pm2:restart": "pm2 restart api-server",
    "pm2:logs": "pm2 logs api-server",
    "pm2:monit": "pm2 monit",
    "trade": "node kite.js",
    "docker:build": "docker build -t kite-trading-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dayjs": "^1.11.18",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "nodemailer": "^7.0.10",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Kite Trading Bot",
  "license": "ISC"
}
